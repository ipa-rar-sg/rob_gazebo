    <arg name="y_pos" default="8.0"/>
    <arg name="z_pos" default="0.0"/>
    <param name="robot_description" command="$(find xacro)/xacro $(find rob_gazebo)/urdf/lidar.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar_$(arg node_num)"  args="-urdf -model node_$(arg node_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
  </group>
  <group ns="node_7">
    <arg name="node_num" default="7"/>
    <arg name="x_pos" default="27.7"/>
    <arg name="y_pos" default="10.15"/>
    <arg name="z_pos" default="0.0"/>
    <param name="robot_description" command="$(find xacro)/xacro $(find rob_gazebo)/urdf/lidar.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar_$(arg node_num)"  args="-urdf -model node_$(arg node_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
  </group>
  <group ns="node_8">
    <arg name="node_num" default="8"/>
    <arg name="x_pos" default="16.0"/>
    <arg name="y_pos" default="10.15"/>
    <arg name="z_pos" default="0.0"/>
    <param name="robot_description" command="$(find xacro)/xacro $(find rob_gazebo)/urdf/lidar.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar_$(arg node_num)"  args="-urdf -model node_$(arg node_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
  </group>
  <group ns="node_9">
    <arg name="node_num" default="9"/>
    <arg name="x_pos" default="14.15"/>
    <arg name="y_pos" default="5.5"/>
    <arg name="z_pos" default="0.0"/>
    <param name="robot_description" command="$(find xacro)/xacro $(find rob_gazebo)/urdf/lidar.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar_$(arg node_num)"  args="-urdf -model node_$(arg node_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
  </group>
  <group ns="node_10">
    <arg name="node_num" default="10"/>
    <arg name="x_pos" default="8.0"/>
    <arg name="y_pos" default="10.15"/>
    <arg name="z_pos" default="0.0"/>
    <param name="robot_description" command="$(find xacro)/xacro $(find rob_gazebo)/urdf/lidar.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar_$(arg node_num)"  args="-urdf -model node_$(arg node_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
  </group>

</launch>
